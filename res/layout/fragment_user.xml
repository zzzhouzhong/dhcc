<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#61C1F3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleX="0.84"
            android:scaleY="0.84"
            android:src="@drawable/choose_01" />

        <TextView
            android:id="@+id/user_username"
            style="@style/textstyle_login"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="请登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="15dp" >

        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                style="@style/textstyle_user"
                android:drawableLeft="@drawable/user_01"
                android:text="个人资料" />

            <TextView
                android:id="@+id/user_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical"
                android:text="请先登录" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/user_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                style="@style/textstyle_user"
                android:drawableLeft="@drawable/user_02"
                android:text="反馈意见" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/user_help"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                style="@style/textstyle_user"
                android:drawableLeft="@drawable/user_03"
                android:text="帮助" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/user_about"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                style="@style/textstyle_user"
                android:drawableLeft="@drawable/user_04"
                android:text="关于" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/user_set"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                style="@style/textstyle_user"
                android:drawableLeft="@drawable/user_05"
                android:text="设置" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/user_checkupdate"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                style="@style/textstyle_user"
                android:drawableLeft="@drawable/user_06"
                android:text="检查更新" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>