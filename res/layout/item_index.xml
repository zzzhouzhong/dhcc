<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/index_total_width"
    android:layout_height="@dimen/index_total_height"
    android:background="@drawable/index_b"
    android:paddingBottom="24dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="16dp" >

    <RelativeLayout
        android:layout_width="@dimen/index_main_width"
        android:layout_height="@dimen/index_main_height"
        android:orientation="vertical" >

        <TextView
            style="@style/num_style"
            android:text="1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/index_main_width"
        android:layout_height="@dimen/index_main_height"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            style="@style/num_style"
            android:text="1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/index_main_width"
        android:layout_height="@dimen/index_main_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/index_main_width"
        android:layout_height="@dimen/index_main_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            style="@style/num_style"
            android:text="1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goto_choosescanner"
        android:layout_width="@dimen/index_center_width"
        android:layout_height="@dimen/index_center_hegith"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
    </RelativeLayout>

</RelativeLayout>